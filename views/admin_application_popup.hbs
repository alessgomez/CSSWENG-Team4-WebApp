

<div class = "panel">
    <div class = "left">
        
        <div class = "refno" id="refno" value={{this.details.applicationNo}}>{{this.details.applicationNo}}</div>
        <div class = "name">{{this.details.fullName}}</div>
        <div class = "status" id="status">{{this.details.applicationStage}}</div>
        {{#if this.details.b5}}
            <br><div id="surveySched">Survey Scheduled on: {{this.details.surveySchedule}}</div>
        {{/if}}
        {{#if this.details.b8}}
            <br><div id="installationSched"><div id="surveySched">Installation Scheduled on: {{this.details.installationSchedule}}</div>
        {{/if}}
        <div id="installationSched"></div>
        <div class = "dropdown" id="dropdown">
            <label for="status-dropdown">Update Status</label>
            <select name="status-dropdown" id="status-dropdown">
                {{#if this.details.d1}}<option value="uploading-requirements" {{#if this.details.b1}} selected {{/if}}>Uploading Requirements</option>{{/if}}
                {{#if this.details.d2}}<option value="adding-representative" {{#if this.details.b2}} selected {{/if}}>Adding Representative</option>{{/if}}
                {{#if this.details.d3}}<option value="printing-and-preparing-documents" {{#if this.details.b3}} selected {{/if}}>Printing and Preparing Documents</option>{{/if}}
                {{#if this.details.d4}}<option value="waiting-for-survey-schedule" {{#if this.details.b4}} selected {{/if}}>Waiting for Survey Schedule</option>{{/if}}
                {{#if this.details.d5}}<option value="pending-surveyor-visit" {{#if this.details.b5}} selected {{/if}}>Pending Surveyor Visit</option>{{/if}}
                {{#if this.details.d6}}<option value="purchasing-of-materials" {{#if this.details.b6}} selected {{/if}}>Purchasing of Materials</option>{{/if}}
                {{#if this.details.d7}}<option value="pending-onsite-visit" {{#if this.details.b7}} selected {{/if}}>Pending Onsite Visit</option>{{/if}}
                {{#if this.details.d8}}<option value="pending-installation" {{#if this.details.b8}} selected {{/if}}>Pending Installation</option>{{/if}}
                                       <option value="completed" {{#if this.details.b9}} selected {{/if}}>Completed</option>
                
            </select>
        </div>
        <div class = "dateAndTime" id = "dateAndTime" hidden>
            <br> <label for='inputDate'>Input Date: </label>
            <input type='date' id='inputDate' name='inputDate'> </input> <br>
            <label for='inputTime'>Input Time: </label>
            <input type='time' id='inputTime' name='inputTime'> </input>
        </div>
        <div style="height: 40px;"></div>
        <div id="backDiv" style="margin-left: 25px"><button id="backBtn">&#8920; Go Back</button> <button id="saveBtn">Save Changes</button></div>
        <p id="saved"></p>
    </div>
    <div class = "right">
        <table>
            <tr>
                <th><div class = "label">Application Date: </div></th>
                <th><div class = "date">{{this.details.submissionDate}}</div></th>
            </tr>
            <tr>
                <th><div class = "label">Address: </div></th>
                <th><div class = "address">{{this.details.address}}</div></th>
            </tr>
            <tr>
                <th><div class = "label">Landmarks/Remarks: </div></th>
                <th><div class = "landmarks">{{this.details.landmark}}</div></th>
            </tr>
            {{#if this.details.establishmentName}}
            <tr>
                <th><div class = "label">Establishment Name: </div></th>
                <th><div class = "establishment">{{this.details.establishmentName}}</div></th>
            </tr>
            {{/if}}
            <tr>
                <th><div class = "label">Property Ownership: </div></th>
                <th><div class = "ownership">{{this.details.ownership}}</div></th>
            </tr>
            {{#if this.details.refAccountNo}}
            <tr>
                <th><div class = "label">Reference Account No: </div></th>
                <th><div class = "ref-acc-no">{{this.details.refAccountNo}}</div></th>
            </tr>
            {{/if}}
            {{#if this.details.refAccountName}}
            <tr>
                <th><div class = "label">Reference Account Name: </div></th>
                <th><div class = "ref-acc-name">{{this.details.refAccountName}}</div></th>
            </tr>
            {{/if}}
            <tr>
                <th><div class = "label">Email Address: </div></th>
                <th><div class = "email">{{this.details.email}}</div></th>
            </tr>
            <tr>
                <th><div class = "label">Contact Number: </div></th>
                <th><div class = "contactno">{{this.details.contactNo}}</div></th>
            </tr>
            
            {{#if this.details.validId}}
            <tr>
                <th><div class = "label">Valid ID: </div></th>
                <th><div class = "validid"><a href="/admin/applications/{{this.details.applicationNo}}/{{this.details.validId}}">{{this.details.validId}}</a></div></th>
            </tr>
            {{/if}}

            <!-- Representative -->
            {{#if this.details.representative}}
                <tr>
                    <th><br>Representative</th>
                    <th></th>
                </tr>
                <tr>
                    <th><div class = "label">Name: </div></th>
                    <th><div class = "rep-name">{{this.details.representative.firstName}} {{this.details.representative.middleName}} {{this.details.representative.lastName}}</div></th>
                </tr>
                <tr>
                    <th><div class = "label">Email Address: </div></th>
                    <th><div class = "rep-email">{{this.details.representative.email}}</div></th>
                </tr>
                <tr>
                    <th><div class = "label">Contact Number: </div></th>
                    <th><div class = "rep-contactno">{{this.details.representative.contactNo}}</div></th>
                </tr>
                <tr>
                    <th><div class = "label">Relationship to Applicant: </div></th>
                    <th><div class = "relationship">{{this.details.representative.relationshipToApplicant}}</div></th>
                </tr>
                <tr>
                    <th><div class = "label">Valid ID: </div></th>
                    <th><div class = "rep-validid"><a href="/admin/applications/{{this.details.applicationNo}}/{{this.details.representative.validId}}">{{this.details.representative.validId}}</a></div></th>
                </tr>
            {{/if}}
            <tr>
                <th></th>
                <th>
                    <!-- Delete -->
                    <button class = "delete-button" onclick="document.getElementById('delete_prompt').style.display='block'" href = "#popup1">Delete Application</button>
                    <div id="delete_prompt" class="modal">
                    <span onclick="document.getElementById('delete_prompt').style.display='none'" class="close" title="Close Modal">&times;</span>
                    <form class="modal-content" action="/action_page.php">
                        <div class="container">
                        <h1>Delete Application</h1>
                        <p>Are you sure you want to delete this application?</p>

                        <div class="clearfix">
                            <button type="button" class="cancelbtn" onclick="document.getElementById('delete_prompt').style.display='none'" href = "#popup1">Cancel</button>
                            <button type="button" class="deletebtn" id="delete">Delete</button>
                        </div>
                        </div>
                    </form>
                    </div>
                </th>
            </tr>
        </table>
    </div>
</div>
